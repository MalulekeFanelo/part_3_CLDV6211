@model EventEase1.Models.Venue

@{
    ViewData["Title"] = "Venue Details";
}

<h2>Venue Details</h2>

<div>
    <strong>Name:</strong> @Model.VenueName <br />
    <strong>Location:</strong> @Model.Location <br />
    <strong>Capacity:</strong> @Model.Capacity <br />
    <strong>Availability:</strong> @(Model.Availability ? "✅ Available" : "❌ Unavailable") <br /> <!-- Added Availability -->

    <strong>Venue Image:</strong><br />
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" alt="Venue Image" width="200" height="150" style="border: 1px solid #ccc; margin-top: 10px;" />
    }
    else
    {
        <span>No image available</span>
    }
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.VenueId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>