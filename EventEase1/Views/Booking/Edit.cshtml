@model EventEase1.Models.Booking

@{
    ViewData["Title"] = "Edit Booking";
}

<h2>Edit Booking</h2>

<form asp-action="Edit">

   
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>"

    <input type="hidden" asp-for="BookingId" />
    <div class="form-group">
        <label asp-for="EventId"></label>
        <select asp-for="EventId" asp-items="ViewBag.EventId" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="VenueId"></label>
        <select asp-for="VenueId" asp-items="ViewBag.VenueId" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="BookingDate"></label>
        <input asp-for="BookingDate" type="date" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
